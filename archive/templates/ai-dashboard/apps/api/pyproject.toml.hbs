[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{projectName}}-api"
version = "0.1.0"
description = "{{description}}"
authors = [{name = "{{author}}"}]
dependencies = [
  "fastapi>=0.104.0",
  "uvicorn[standard]>=0.24.0",
  "pydantic>=2.0.0",
  "motor>=3.3.0",
  "beanie>=1.23.0",
  "pandas>=2.1.0",
  "scikit-learn>=1.3.0"
]
requires-python = ">=3.11"

[project.optional-dependencies]
dev = [
  "pytest>=7.0.0",
  "pytest-asyncio>=0.21.0",
  "black>=23.0.0",
  "isort>=5.0.0",
  "mypy>=1.0.0"
]

[tool.black]
line-length = 88
target-version = ['py311']

[tool.isort]
profile = "black"

[tool.mypy]
python_version = "3.11"
