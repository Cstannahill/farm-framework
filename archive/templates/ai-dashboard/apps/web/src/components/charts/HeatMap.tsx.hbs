import React from 'react';

export default function HeatMap({ data }: { data: number[][] }) {
  return (
    <div className="grid" style={{ gridTemplateColumns: `repeat(${data[0]?.length || 0}, 1fr)` }}>
      {data.flat().map((v, i) => (
        <div
          key={i}
          style={{ backgroundColor: `rgba(0,0,255,${v})` }}
          className="w-full h-6"
        />
      ))}
    </div>
  );
}
