import { defineConfig, loadEnv } from 'vite'
import react from '@vitejs/plugin-react'
import { resolve } from 'path'

// https://vitejs.dev/config/
export default defineConfig(({ mode }) => {
  // Load env from root directory first, then local
  const rootEnv = loadEnv(mode, resolve(__dirname, '../../'), '')
  const localEnv = loadEnv(mode, __dirname, '')
  
  const env = { ...rootEnv, ...localEnv }
  
  return {
    plugins: [react()],
    envDir: '../../', // Load environment variables from root
    resolve: {
      alias: {
        '@': resolve(__dirname, './src'),
        '@/api': resolve(__dirname, '../api/src'),
      },
    },
    server: {
      port: parseInt(env.VITE_PORT || '3000'),
      proxy: {
        '/api': {
          target: env.VITE_API_URL || 'http://localhost:8000',
          changeOrigin: true,
        },
{{#if_feature "realtime"}}
        '/ws': {
          target: env.VITE_WS_URL || 'ws://localhost:8000',
          ws: true,
          changeOrigin: true,
        },
{{/if_feature}}
      },
    },
    build: {
      outDir: 'dist',
      sourcemap: true,
      target: 'es2022',
    },
    define: {
      // Make env vars available to client code
      __API_URL__: JSON.stringify(env.VITE_API_URL || 'http://localhost:8000'),
{{#if_feature "realtime"}}
      __WS_URL__: JSON.stringify(env.VITE_WS_URL || 'ws://localhost:8000'),
{{/if_feature}}
    },
  }
})
