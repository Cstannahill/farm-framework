{
  "name": "@farm/cli",
  "version": "0.1.0",
  "description": "Command line interface for FARM framework",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "farm": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@farm/core": "workspace:*",
    "@farm/types": "workspace:*",
    "commander": "^11.1.0",
    "inquirer": "^9.2.11",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.2",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist"
  ]
}
