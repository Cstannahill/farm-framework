{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist/ts",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@farm/types": ["../types/src"],
      "@farm/types/*": ["../types/src/*"],
      "@farm/type-sync": ["../type-sync/src"],
      "@farm/type-sync/*": ["../type-sync/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../types" }]
}
