[build-system] requires = ["hatchling"] build-backend = "hatchling.build"
[project] name = "{{projectName}}-api" version = "0.1.0" description = "{{description}}"
authors = [ {name = "{{author}}", email = "dev@example.com"}, ] dependencies = [
"fastapi>=0.104.0", "uvicorn[standard]>=0.24.0", "pydantic>=2.0.0",
{{#if_database "mongodb"}}
  "motor>=3.3.0", "beanie>=1.23.0",
{{/if_database}}
{{#if_feature "ai"}}
  "httpx>=0.25.0", "openai>=1.0.0",
{{/if_feature}}
] requires-python = ">=3.11" license = "MIT" readme = "README.md"
[project.optional-dependencies] dev = [ "pytest>=7.0.0",
"pytest-asyncio>=0.21.0", "black>=23.0.0", "isort>=5.0.0", "mypy>=1.0.0", ]
[tool.black] line-length = 88 target-version = ['py311'] include = '\\.pyi?$'
[tool.isort] profile = "black" multi_line_output = 3 [tool.mypy] python_version
= "3.11" warn_return_any = true warn_unused_configs = true disallow_untyped_defs
= true [tool.pytest.ini_options] testpaths = ["tests"] addopts = "-v --tb=short"
asyncio_mode = "auto"
