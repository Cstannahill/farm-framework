{
  "name": "{{name}}",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"api,web\" -c \"yellow,cyan\" \"pnpm run dev:api\" \"pnpm run dev:web\"",
    "dev:api": "cd apps/api && python -m uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:web": "cd apps/web && pnpm run dev",
    "build": "pnpm run build:web",
    "build:web": "cd apps/web && pnpm run build",
    "preview": "cd apps/web && pnpm run preview",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "install:all": "pnpm install && cd apps/api && pip install -r requirements.txt",
    "type-check": "cd apps/web && pnpm run type-check",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf apps/web/dist apps/web/node_modules apps/api/__pycache__ node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "keywords": [
    "farm-stack",
    "ai-chat",
    "fastapi",
    "react",
    "{{database}}",
    "ai",
    "machine-learning"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
