{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",

    // Path mapping for monorepo packages
    "baseUrl": ".",
    "paths": {
      "@farm/types": ["./packages/types/src/index.ts"],
      "@farm/types/*": ["./packages/types/src/*"],
      "@farm/core": ["./packages/core/src/index.ts"],
      "@farm/core/*": ["./packages/core/src/*"],
      "@farm/cli": ["./packages/cli/src/index.ts"],
      "@farm/cli/*": ["./packages/cli/src/*"],
      "@farm/ui-components": ["./packages/ui-components/src/index.ts"],
      "@farm/ui-components/*": ["./packages/ui-components/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "coverage", ".next", ".turbo"]
}
